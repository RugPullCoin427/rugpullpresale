    <script>
      function updateTokenAmount() {
        const bnb = parseFloat(document.getElementById("bnbInput").value);
        const rugPerBNB = 2000000;
        const rug = isNaN(bnb) ? 0 : bnb * rugPerBNB;
        document.getElementById("tokenAmount").innerText = `You'll get: ${rug.toLocaleString()} RUG`;
      }

